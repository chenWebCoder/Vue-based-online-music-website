    width: 100%
  .lrc
    display: none

  /************歌单头部**************/
  .music-name
    width: calc(50% - 50px)
  .music-songer, .music-zhuanji
    width: 24%

  /*       ---------全局的----------       */
  .change
    height: calc(100% - 60px)
  .music-bottom
    height: 60px

  /********底部控制区*******/
  .control-btn
    width: 200px
    height: 100%
  .control-process
    width: calc(100% - 200px)
    height: 100%
    padding: 8px 10px
  .process
    margin-top: 35px
/**********内容区域滚动条设置********/
  .content-wrapper
    overflow: auto

