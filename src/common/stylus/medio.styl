/******************************************   屏幕小于525px（手机）   ******************** */
@media screen and (max-width:525px)
  /***********歌单和歌词***********/
  .vue-router
    width: 100%
  .lrc
    display: none

  /************歌单头部**************/
  .music-name
    width: calc(60% - 50px)
  .music-songer
    width: 40%
  .music-zhuanji
    display: none !important

  /*       ---------全局的----------       */
  .change
    height: calc(100% - 100px)
  .music-bottom
    height: 100px


  /********底部控制区*******/
  .control-btn
    width: 100%
    height: 60px
  .control-process
    width: 100%
    height: 40px
    padding: 1px 10px
  .process
    margin-top: 28px

/**********内容区域滚动条设置********/
.content-wrapper
  overflow: hidden

